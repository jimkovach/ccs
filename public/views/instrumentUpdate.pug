extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
      p= pageHeader.strapline
      .error= message
  .row
    .col-xs-12.col-md-12
      form.form-horizontal(id="newForm" action="", method="post", role="form")
        .col-xs-12.col-sm-6.col-md-3
          .form-group
            col-xs-12.col-sm-12.col-md-12
              p INSTRUMENT
              label Instrument
                input#instrument.form-control:invalid(autofocus=true name="instrument", placeholder="instrument", value=instrument.instrument, required)
              label Serial Number
                input#serial.form-control(name="serial", placeholder="serial number", value=instrument.serial)
              label Make
                input#make.form-control(name="make", placeholder="make", value=instrument.make)
              label Model
                input#model.form-control(name="model", placeholder="model", value=instrument.model)
              label Owner
                input#owner.form-control(name="owner", placeholder="owner", value=instrument.owner)
              label Group
                input#group.form-control(name="group", placeholder="assigned group", value=instrument.group)
        .col-xs-12.col-sm-6.col-md-3
          .form-group
            col-xs-12.col-sm-12.col-md-12
              p PICKUP
              label Building
                input#pickupBuilding.form-control(name="pickupBuilding", placeholder="Pickup Building", value=instrument.pickupBuilding)
              label Room
                input#pickupRoom.form-control(name="pickupRoom", placeholder="Pickup Room", value=instrument.pickupRoom)
              label Date
                input#pickupDate.form-control(name="pickupDate", placeholder="Pickup Date", value=instrument.pickupDate)
              label Time
                input#pickupTime.form-control(name="pickupTime", placeholder="Pickup Time", value=instrument.pickupTime)
              label Manager
                input#pickupPerson.form-control(name="pickupPerson", placeholder="Pickup Person", value=instrument.pickupPerson)

        .col-xs-12.col-sm-6.col-md-3
          .form-group
            col-xs-12.col-sm-12.col-md-12
              p DELIVERY
              label Building
                input#deliveryBuilding.form-control(name="deliveryBuilding", placeholder="Delivery Building", value=instrument.deliveryBuilding)
              label Room
                input#deliveryRoom.form-control(name="deliveryRoom", placeholder="Delivery Room", value=instrument.deliveryRoom)
              label Date
                input#deliveryDate.form-control(name="deliveryDate", placeholder="Delivery Date", value=instrument.deliveryDate)
              label Time
                input#deliveryTime.form-control(name="deliveryTime", placeholder="Delivery Time", value=instrument.deliveryTime)
              label Manager
                input#deliveryPerson.form-control(name="deliveryPerson", placeholder="Delivery Manager", value=instrument.deliveryPerson)

        .col-xs-12.col-sm-6.col-md-3
          .form-group
            col-xs-12.col-sm-12.col-md-12
              p RETURN
              label Date
                input#returnDate.form-control(name="returnDate", placeholder="Return Date", value=instrument.returnDate)
              label Time
                input#returnTime.form-control(name="returnTime", placeholder="Return Time", value=instrument.returnTime)
              label Manager
                input#returnPerson.form-control(name="returnPerson", placeholder="Return Person", value=instrument.returnPerson)

          .form-group
            col-xs-12.col-sm-12.col-md-12

              p
              hr
              p
              a.btn.btn-default(onclick="window.history.back()" id="cancel"  role='button') Cancel
              button.btn.btn-default(type="submit" id="submit" value='Submit') Save
              a.btn.btn-default.pull-right(href='/instrumentDelete/' + instrument._id role='button') Delete